@using System.Collections.Generic
@{ var menus = ViewBag.Menus as List<MusicApp.Models.Menu>; }

<head>
    <meta charset="UTF-8">
    <meta name="description" content="">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Title -->
    <title>One Music - Modern Music HTML5 Template</title>

    <!-- Favicon -->
    <link rel="icon" href="@Url.Content("~/Content/img/core-img/favicon.ico")">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <!-- Stylesheet -->


    @Styles.Render("~/Content/css")
    <!-- Gọi bundle CSS -->
</head>

<!-- ##### Header Area Start ##### -->
<header class="header-area">
    <!-- Navbar Area -->
    <div class="oneMusic-main-menu">
        <div class="classy-nav-container breakpoint-off">
            <div class="container">
                <!-- Menu -->
                @Html.Action("GetMenu", "Menu")
            </div>
        </div>
    </div>
</header>
<!-- ##### Header Area End ##### -->

<div class="body-content">
    @RenderBody() <!-- Đảm bảo RenderBody được viết đúng -->

    <hr /> <!-- Đường phân cách để tạo sự tách biệt giữa nội dung chính và footer -->
</div>


<footer class="footer-area">
    <div class="container">
        @Html.Action("GetMenuForFooter", "Menu")

    </div>
</footer>

<!-- ##### All Javascript Script ##### -->
<script src="~/Scripts/js/jquery/jquery-2.2.4.min.js"></script>
<script src="~/Scripts/js/bootstrap/popper.min.js"></script>
<script src="~/Scripts/js/bootstrap/bootstrap.min.js"></script>
<script src="~/Scripts/js/owl.carousel.js"></script>
<script src="~/Scripts/js/plugins/plugins.js"></script>
<script src="~/Scripts/js/active.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<!-- Đảm bảo rằng jQuery đã được tải -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>




@RenderSection("Scripts", required: false)

</body>
</html>
