@using System.Collections.Generic
@model List<test.Models.Menu>
<head>
    <meta charset="UTF-8">
    <meta name="description" content="">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Title -->
    <title>One Music - Modern Music HTML5 Template</title>

    <!-- Favicon -->
    <link rel="icon" href="@Url.Content("~/Content/img/core-img/favicon.ico")">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.min.css">
    <!-- Stylesheet -->
    <link rel="stylesheet" href="~/Content/style.css">
    @Styles.Render("~/Content/css") <!-- Gọi bundle CSS -->
</head>

<!-- ##### Header Area Start ##### -->
<header class="header-area">
    <div class="oneMusic-main-menu">
        <div class="classy-nav-container breakpoint-off">
            <div class="container">
                <nav class="classy-navbar justify-content-between" id="oneMusicNav">

                    <!-- Nav brand -->
                    <a href="~/Views/Home/index.cshtml" class="nav-brand">
                        <img src="@ViewBag.LogoUrl" alt="Logo">
                    </a>

                    <!-- Navbar Toggler -->
                    <div class="classy-navbar-toggler">
                        <span class="navbar-toggler-icon"></span>
                    </div>

                    <!-- Menu -->
                    <div class="classy-menu">

                        <!-- Close Button -->
                        <div class="classycloseIcon">
                            <div class="cross-wrap"><span class="top"></span><span class="bottom"></span></div>
                        </div>

                        <!-- Nav Start -->
                        <div class="classynav">
                            <ul>
                                @Html.Action("GetMenu", "Menu") <!-- Gọi phương thức GetMenu của MenuController -->
                            </ul>

                            <!-- Login/Register & Cart Button -->
                            <div class="login-register-cart-button d-flex align-items-center">
                                <!-- Login/Register -->
                                <div class="login-register-btn mr-50">
                                    <a href="~/Views/Account/Login.cshtml" id="loginBtn">Login / Register</a>
                                </div>

                                <!-- Cart Button -->
                                <div class="cart-btn">
                                    <p><span class="icon-shopping-cart"></span> <span class="quantity">1</span></p>
                                </div>
                            </div>
                        </div>
                        <!-- Nav End -->

                    </div>
                </nav>
            </div>
        </div>
    </div>
</header>
<!-- ##### Header Area End ##### -->

<div class="container-fluid body-content">
    @RenderBody()  <!-- Đảm bảo RenderBody được viết đúng -->

    <hr />
    <footer class="footer-area">
        <div class="container">
            <div class="row d-flex flex-wrap align-items-center">
                <div class="col-12 col-md-6">
                    <a href="#"><img src="~/Content/img/core-img/logo.png" alt=""></a>
                    <p class="copywrite-text">
                        Copyright &copy;
                        <script>document.write(new Date().getFullYear());</script> All rights reserved | This template is made with <i class="fa fa-heart-o" aria-hidden="true"></i> by <a href="https://colorlib.com" target="_blank">Colorlib</a>
                    </p>
                </div>

                <div class="col-12 col-md-6">
                    <div class="footer-nav">
                        <!-- Lấy menu từ GetMenu của MenuController, loại trừ phần liên quan đến "Account" -->
                        @Html.Action("GetMenuForFooter", "Menu")
                    </div>
                </div>
            </div>
        </div>
    </footer>
</div>

<!-- ##### All Javascript Script ##### -->
<script src="~/Scripts/js/jquery/jquery-2.2.4.min.js"></script>
<script src="~/Scripts/js/bootstrap/popper.min.js"></script>
<script src="~/Scripts/js/bootstrap/bootstrap.min.js"></script>
<script src="~/Scripts/js/owl.carousel.js"></script>
<script src="~/Scripts/js/plugins/plugins.js"></script>
<script src="~/Scripts/js/active.js"></script>
</body>
</html>
