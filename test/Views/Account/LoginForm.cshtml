@model MusicApp.Models.LoginForm
<section class="login-area section-padding-100">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-8">
                <div class="login-content">
                    <h3>@Model.Title</h3>
                    <!-- Login Form -->
                    <div class="login-form">
                        <form action="#" method="post">
                            <div class="form-group">
                                <label for="exampleInputEmail1">@Model.EmailLabel</label>
                                <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="@Model.EmailPlaceholder">
                                <small id="emailHelp" class="form-text text-muted"><i class="fa fa-lock mr-2"></i>@Model.EmailHelpText</small>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">@Model.PasswordLabel</label>
                                <input type="password" class="form-control" id="exampleInputPassword1" placeholder="@Model.PasswordPlaceholder">
                            </div>
                            <div class="form-group">
                                <a href="@Url.Action("Index", "Account", new { formType = "register" })" class="text-muted">Don't have an account? Register now</a>
                            </div>
                            <button type="submit" class="btn oneMusic-btn mt-30">@Model.ButtonText</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
