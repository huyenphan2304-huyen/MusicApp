@{
    ViewBag.Title = "LatestAlbums";
}

@model List<MusicApp.Models.Album>

<!-- ##### Latest Albums Area Start ##### -->
<section class="latest-albums-area section-padding-10">
    <div class="container">
        <div class="row">
            <h2>@ViewBag.Title</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="albums-slideshow owl-carousel">
                    @foreach (var album in Model)
                    {
                        <!-- Single Album -->
                        <div class="single-album"
                             onclick="location.href='@Url.RouteUrl("AlbumDetail", new { type = "album", meta = album.Meta, id = album.Id })'"
                             style="cursor: pointer;">
                            <img src="@album.CoverImageUrl" alt="@album.Title">
                            <div class="album-info">
                                <h5>@album.Title</h5>
                                <p>@album.Artist</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
<!-- ##### Latest Albums Area End ##### -->
