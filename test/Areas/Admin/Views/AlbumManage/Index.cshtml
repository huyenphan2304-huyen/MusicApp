@using PagedList.Mvc;
@using PagedList;

@model IPagedList<MusicApp.Models.Album>



@{
    ViewBag.Title = "Index";
}


<div class="container">
    <div class="page-inner">
        <div class="page-header">
            <h3 class="fw-bold mb-3">Album Management</h3>
            <ul class="breadcrumbs mb-3">
                <li class="nav-home">
                    <a href="#">
                        <i class="icon-home"></i>
                    </a>
                </li>
                <li class="separator">
                    <i class="icon-arrow-right"></i>
                </li>
                
                <li class="separator">
                    <i class="icon-arrow-right"></i>
                </li>
                <li class="nav-item">
                    <a href="#">Album</a>
                </li>
            </ul>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="d-flex align-items-center">
                            <h4 class="card-title">Albums</h4>
                            <a href="@Url.Action("Create", "AlbumManage")" class="btn btn-primary btn-round ms-auto">
                                <i class="fa fa-plus"></i>
                                Add New Album
                            </a>
                        </div>
                    </div>
                    <div class="table-responsive">

                        <table id="add-row" class="display table table-striped table-hover">
                            <thead>

                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model[0].Title)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model[0].Artist)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model[0].CoverImageUrl)
                                    </th>

                                    <th>
                                        @Html.DisplayNameFor(model => model[0].ReleaseDate)
                                    </th>

                                    <th>
                                        @Html.DisplayNameFor(model => model[0].Meta)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model[0].Hide)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model[0].Order)
                                    </th>
                                    <th style="width: 10%">Action</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Title)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Artist)
                                        </td>
                                        <td>
                                            <img src="@Url.Content(item.CoverImageUrl)" alt="Cover Image" style="max-width: 100px; max-height: 100px;" />
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.ReleaseDate)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.Meta)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Hide)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Order)
                                        </td>

                                        <td>
                                            <div class="form-button-action">
                                                <a href="@Url.Action("Edit", "AlbumManage", new { id = item.Id })" class="create-link">
                                                    <i class="fa fa-edit"></i>
                                                </a>|
                                                <a href="@Url.Action("Delete", "AlbumManage", new { id = item.Id })" class="create-link">
                                                    <i class="fa fa-times"></i>
                                                </a>
                                                </div>
                                        </td>
                                    </tr>
                                }
                                </tbody>

                        </table>
                        <div class="pagination">
                            @Html.PagedListPager(Model, page => Url.Action("Index", new { page, pageSize = Request.QueryString["pageSize"] }))
                        </div>
                    </div>


                    
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#add-row').DataTable({
            responsive: true
        });
    });
</script>