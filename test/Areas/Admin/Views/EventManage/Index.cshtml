@using PagedList.Mvc;
@using PagedList;

@model IPagedList<MusicApp.Models.Event>

@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="page-inner">
        <div class="page-header">
            <h3 class="fw-bold mb-3">Event Management</h3>
            <ul class="breadcrumbs mb-3">
                <li class="nav-home">
                    <a href="#">
                        <i class="icon-home"></i>
                    </a>
                </li>
                <li class="separator">
                    <i class="icon-arrow-right"></i>
                </li>
                <li class="nav-item">
                    <a href="#">Management</a>
                </li>
                <li class="separator">
                    <i class="icon-arrow-right"></i>
                </li>
                <li class="nav-item">
                    <a href="#">Event</a>
                </li>
            </ul>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="d-flex align-items-center">
                            <h4 class="card-title">Events</h4>
                            <a href="@Url.Action("Create", "EventManage")" class="btn btn-primary btn-round ms-auto">
                                <i class="fa fa-plus"></i>
                                Add New
                            </a>
                        </div>
                    </div>


                    <div class="table-responsive">
                        <table id="add-row" class="display table table-striped table-hover">
                            <thead>

                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model[0].Title)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model[0].Place)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model[0].Date)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model[0].ImageUrl)
                                    </th>

                                    <th>
                                        @Html.DisplayNameFor(model => model[0].Meta)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model[0].Hide)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model[0].Order)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model[0].DateBegin)
                                    </th>
                                    <th style="width: 10%">Action</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Title)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Place)
                                        </td>
                                        <td>
                                            @if (item.Date != null)
                                            {
                                                @Html.DisplayFor(modelItem => item.Date)
                                            }
                                            else
                                            {
                                                <span>No Date</span>
                                            }
                                        </td>
                                        <td>

                                            @if (!string.IsNullOrEmpty(item.ImageUrl))
                                            {
                                                <img src="@Url.Content(item.ImageUrl)" alt="Event Image" style="max-width: 100px; max-height: 100px;"/>
                                            }
                                            else
                                            {
                                                <p>No image available</p>
                                            }

                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Meta)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Hide)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Order)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DateBegin)
                                        </td>
                                        <td>
                                            <div class="form-button-action">
                                                <a href="@Url.Action("Edit", "EventManage", new { id = item.Id })" class="btn btn-link btn-primary btn-lg">
                                                    <i class="fa fa-edit"></i>
                                                </a>
                                                <a href="@Url.Action("Delete", "EventManage", new { id = item.Id })" class="btn btn-link btn-danger btn-lg">
                                                    <i class="fa fa-times"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>


                </div>
            </div>
        </div>
    </div>
</div>

