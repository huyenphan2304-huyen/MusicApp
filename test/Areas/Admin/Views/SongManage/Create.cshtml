                            <label>Title</label>
                            <input id="Name"
                                   type="text"
                                   class="form-control" />
                        </div>
                        <div class="form-group form-group-default">
                            <label>Artist</label>
                            <input id="Name"
                                   type="text"
                                   class="form-control" />
                        </div>
                        <div class="form-group form-group-default">
                            <label>Category</label>
                            <input id="Name"
                                   type="text"
                                   class="form-control" />
                        </div>
                        <div class="form-group form-group-default">
                            <label>Album</label>
                            <input id="Name"
                                   type="text"
                                   class="form-control" />
                        </div>
                        <div class="form-group">
                            <div class="d-flex">
                                <div class="form-check">
