                        </div>
                        <div class="form-group">
                            <label for="exampleFormControlFile1">Example file input</label>
                            <input type="file"
                                   class="form-control-file"
                                   id="exampleFormControlFile1" />
                        </div>

                    </div>
                    <div class="col-md-6 col-lg-4">
                        <div class="form-group form-group-default">
                            <label>Meta</label>
                            <input id="Name"
                                   type="text"
                                   class="form-control" />
                        </div>
                        <div class="form-group form-inline">
                            <label for="inlineinput"
                                   class="col-md-3 col-form-label">Order</label>
                            <div class="col-md-9 p-0">
                                <input type="text"
                                       class="form-control input-full"
                                       id="inlineinput" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="exampleFormControlFile1">ReleaseDate</label>
                            <input type="date"
                                   class="form-control"
                                   id="exampleFormControlFile1" />
                        </div>
                        <div class="form-group">
                            <div class="d-flex">

                                <div class="form-check">
                                    <input class="form-check-input"
                                           name="flexRadioDefault"
                                           id="flexRadioDefault2"
                                           checked />
                                    <label class="form-check-label"
                                           for="flexRadioDefault2">
                                        Hide
                                    </label>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="row-cols-lg-9">
                    <div class="form-group">
                        <label for="comment">Lyris</label>
                        <textarea class="form-control" id="comment" rows="10">
  </textarea>
                    </div>
                </div>
            </div>
            <div class="card-action">
                <button class="btn btn-success">Submit</button>
                <button class="btn btn-danger">Cancel</button>
            </div>
        </div>
    </div>
</div>

