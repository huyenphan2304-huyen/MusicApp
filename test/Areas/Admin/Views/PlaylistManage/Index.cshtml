@using PagedList.Mvc;
@using PagedList;

@model IPagedList<MusicApp.Models.Playlist>

<h2>Index</h2>

<p>
    <a href="@Url.Action("Create", "Playlist")" class="create-link">
        <img src="~/Areas/Admin/Content/assets/img/icons8-add-50.png" alt="Create New" />
    </a>
</p>

<form method="get" id="pageSizeForm">
    <label for="pageSize">Số lượng bài hát mỗi trang:</label>
    <select id="pageSize" name="pageSize" onchange="document.getElementById('pageSizeForm').submit();">
        <option value="5" @(Request.QueryString["pageSize"] == "5" ? "selected" : "")>5</option>
        <option value="10" @(Request.QueryString["pageSize"] == "10" ? "selected" : "")>10</option>
        <option value="20" @(Request.QueryString["pageSize"] == "20" ? "selected" : "")>20</option>
        <option value="50" @(Request.QueryString["pageSize"] == "50" ? "selected" : "")>50</option>
    </select>
</form>

<div class="table-responsive">
    <table class="table">
        <tr>
            <th>@Html.DisplayNameFor(model => model[0].PlaylistName)</th>
            <th>@Html.DisplayNameFor(model => model[0].PlaylistDescription)</th>
            <th>@Html.DisplayNameFor(model => model[0].UserId)</th>
            <th>@Html.DisplayNameFor(model => model[0].CreatedDate)</th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.PlaylistName)</td>
                <td>@Html.DisplayFor(modelItem => item.PlaylistDescription)</td>
                <td>@Html.DisplayFor(modelItem => item.UserId)</td>
                <td>@Html.DisplayFor(modelItem => item.CreatedDate)</td>
                <td>
                    <p style=" display: inline-flex;">

                        <a href="@Url.Action("Details", "Playlist", new { id = item.Id })" class="create-link">
                            <img src="~/Areas/Admin/Content/assets/img/icons8-edit-30.png" alt="Edit" />
                        </a> |
                        <a href="@Url.Action("Delete", "Playlist", new { id = item.Id })" class="create-link">
                            <img src="~/Areas/Admin/Content/assets/img/icons8-minus-30.png" alt="Delete" />
                        </a>
                        </p>
                </td>
            </tr>
        }
    </table>

    <div class="pagination">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page, pageSize = Request.QueryString["pageSize"] }))
    </div>
</div>
