@model MusicApp.Models.Slide

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Create Slide</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <!-- Dropdown list cho album -->
    <div class="form-group">
        @Html.LabelFor(model => model.AlbumId, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.AlbumId, (SelectList)ViewBag.AlbumList, "Select Album", new { @class = "form-control", id = "albumDropdown" })
            @Html.ValidationMessageFor(model => model.AlbumId, "", new { @class = "text-danger" })
        </div>
    </div>

    <!-- Hiển thị thông tin của album đã chọn -->
    <div id="albumInfo" style="display:none;">
        <div class="form-group">
            <label class="control-label col-md-2">Album Title</label>
            <div class="col-md-10">
                <span id="albumTitle" class="form-control"></span>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Album Artist</label>
            <div class="col-md-10">
                <span id="albumArtist" class="form-control"></span>
            </div>
        </div>
    </div>

    <!-- Các trường khác -->
    

    <div class="form-group">
        @Html.LabelFor(model => model.Hide, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Hide, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Hide, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Order, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Order, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Order, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.DateBegin, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.DateBegin, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DateBegin, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<!-- Javascript để hiển thị thông tin album khi chọn -->
<script type="text/javascript">
    $(document).ready(function () {
        // Khi form được tải, tự động điền giá trị cho Meta nếu chưa có giá trị
        var slideId = @Model.Id; // Giả sử Model.Id là ID của Slide (hoặc giá trị mới cho Slide)
        if (slideId) {
            var metaValue = "slide-" + slideId;
            $('#Meta').val(metaValue); // Điền giá trị Meta tự động
        }

        // Xử lý sự kiện thay đổi album để hiển thị thông tin
        $('#albumDropdown').change(function () {
            var albumId = $(this).val();
            if (albumId) {
                // Gửi yêu cầu Ajax để lấy thông tin album
                $.get('@Url.Action("GetAlbumInfo", "Slide")', { id: albumId }, function (data) {
                    if (data) {
                        $('#albumTitle').text(data.Title);
                        $('#albumArtist').text(data.Artist);
                        $('#albumInfo').show();
                    }
                });
            } else {
                $('#albumInfo').hide();
            }
        });
    });
</script>
